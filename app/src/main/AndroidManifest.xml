<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ridho.ligainggris">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ikon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ikon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.ridho.ligainggris.activity.favorit.FavoriteActivity"></activity>
        <activity
            android:name="com.example.ridho.ligainggris.activity.splash.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.ridho.ligainggris.activity.main.MainActivity" />
        <activity
            android:name="com.example.ridho.ligainggris.activity.detail.DetailActivity"
            android:parentActivityName="com.example.ridho.ligainggris.activity.main.MainActivity" />
    </application>

</manifest>